<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BackResource"
    android:id="@+id/lrclayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/BlackTranslucent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_margin="80dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_title"
                style="@style/TextviewStyle"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是标题"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/fragment_author"
                style="@style/TextviewStyle"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="我是歌手" />

            <TextView
                android:id="@+id/fragment_lrc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="8dp"

                android:text="未找到歌词，请下载歌词"
                android:textColor="#fff"
                android:textSize="15dp" />
            <com.studyandroid.hestersmile.mymusic.LrcFunction.LrcView
                android:id="@+id/fragment_lrccontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="8dp"
                android:text="未找到歌词，请下载歌词"
                android:textColor="#000"
                android:textSize="15dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
